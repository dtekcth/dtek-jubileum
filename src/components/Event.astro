---
export interface Props {
  title: string;
  description: string;
  img: string;
  time: string;
  place: string;
  nrOfTickets: string;
  datum: string;
  link?: string;
  linkfb?: string;
  callToAction?: string;
  ticketInfo?:string;
  mail: string;
  deactivate?: boolean
}
const { callToAction, title, description, time, place, nrOfTickets, img, link, linkfb, datum, ticketInfo, mail, deactivate } =
  Astro.props;
---

<div
  id="event-card" class="flex sm:flex-row flex-col gap-2 rounded shadow-lg border relative"
>
  <style>
    #event-title{
      font-size: 18px;
    }
    #info{
      font-size: 18px
    }
    #info span{
      color: #fa6607
    }
    #half {
      display: flex;
      flex: 1;
    }

    .action .action2{
      transition: background-color 0.25s;
      transition: color 0.25s;
    }

    .action:hover {
      transition: background-color 0.25s;
      transition: color 0.25s;
      background-color: white;
      color: #fa6607;
    }

    .action2:hover {
      transition: background-color 0.25s;
      transition: color 0.25s;
      background-color: #fa6607;
      color: white;
    }


  </style>
  <div id="half" class="rounded-right">
    <img class="object-cover" style="border-radius: 4px 0px 0px 4px;" src={img} alt="" />
      <div
        class="absolute cursor-default font-bold cursor default top-6 left-6 text-white bg-[#fa6607] p-5 rounded-full aspect-square text-xs flex items-center justify-center"
      >
        <p id="date" style="font-size: 16px">{datum}</p>
      </div>
  </div>

  <div id="half" class="flex flex-col text-center py-2 px-4">
    <h3 id="event-title" class="font-medium text-lg cursor-default text-center pb-0">{title}</h3>
    <div id="event-content" class="flex flex-col flex-grow justify-between">

      <p id="event-description" class="text-center m-4">{description}</p>

      <div class="flex flex-row flow-grow justify-left text-left">
        <div id="line" class ="bg-[#a7a7a7] w-0.5 rounded mx-3"></div>
        <div id="info" class="flex flex-col justify-between">
          <p id="time" class="flex flex-row items-center my-1 ">
            <span class="material-symbols-outlined mr-1"> schedule </span>
            {time}
          </p>
          <p id="place" class="flex flex-row items-center my-1"> 
            <span class="material-symbols-outlined mr-1"> location_on </span>
            {place}
          </p>
          <p id="tickets" class="flex flex-row items-center my-1">
            <span class="material-symbols-outlined mr-1 "> local_activity </span>
            {nrOfTickets}
          </p>
        </div>
      </div>
      <div class="mt-5 mb-2">
        <p class="">{ticketInfo}</p>
        <div class="grid md:grid-cols-2 grid-cols-1 gap-2 mx-6">
        {!deactivate ? 
          <a href={link} target="_blank">
            <button type="button" class="action bg-[#fa6607] border-[#fa6607] border-2 rounded cursor-pointer font-bold text-center text-white p-2 my-1 w-[100%]">
              {callToAction ? callToAction : "Köp biljett!"}
            </button>
          </a>
        :
          <button type="button" class="bg-[#ffb07e] border-[#ffb07e] border-2 rounded cursor-default font-bold text-center text-white p-2 my-1 w-[100%]">
            {callToAction ? callToAction : "SLUTSÅLT"}
          </button>
        }
        <a href={linkfb} target="_blank">
          <button type="button" class="action2 border-[#fa6607] border-2 rounded cursor-pointer font-bold text-center text-[#fa6607] p-2 my-1 w-[100%]">
            {"Läs mer"}
          </button>
        </a>
      </div>
      </div>
      <p class="text-[#a7a7a7]"> Frågor: {mail}</p>
    
    </div>
  </div>
</div>
